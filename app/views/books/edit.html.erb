<div class="message">
  <%= flash[:notice] %>
</div>

<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", "/books/#{@book.id}" %><span> | </span><%= link_to "Back", "/books" %>