<h1>Books</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Body</th>
  </thead>
  <tbody>
    <% @books.each do |book| %>

      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show","books/:id" %></td>
        <td><%= link_to "Edit","books/:id/edit" %></td>
        <td><%= link_to "Destroy","books/:id",method: :delete,"date-confirm" => "Are you sure?" %></td>
      </tr>

    <% end %>
  </tbody>
</table>

<div class="new-page">

  <h2>New book</h2>

  <%= form_with model:@book do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Body</p>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

  <% end %>

</div>